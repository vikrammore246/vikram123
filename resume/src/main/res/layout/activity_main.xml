<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.resume.MainActivity"
    android:background="#212121">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@drawable/shubham"
        android:id="@+id/foto_layout"
        android:layout_marginBottom="10dp">


        <TextView
            android:text="Shubham G. Rathi   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="79dp"
            android:id="@+id/textView"
            android:typeface="serif"
            android:textSize="24sp"
            android:textColor="@android:color/background_light"
            android:background="#40000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="B.E."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginEnd="19dp"
            android:id="@+id/textView2"
            android:textColor="@android:color/background_light"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/info_layout"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/firstlay"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="About Me"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#CDDC39"
                android:id="@+id/idaboutme"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Academics"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="0.5"
                android:background="#64DD17"
                android:id="@+id/idacademics"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/secondlay"
            android:layout_below="@id/firstlay"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Experiences"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="0.5"
                android:background="#00BFA5"
                android:id="@+id/idexperience"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Skills"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="0.5"
                android:background="#AA00FF"
                android:id="@+id/idskills"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/thirdlay"
            android:layout_below="@id/secondlay"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Events &amp; Workshops"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="0.5"
                android:background="#CDDC39"
                android:id="@+id/idevents"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Strengths &amp; Weakness"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="0.5"
                android:background="#FF4081"
                android:id="@+id/idstrength"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>

